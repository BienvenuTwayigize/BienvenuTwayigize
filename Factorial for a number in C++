/*Factorial for a number using C++ program*/
#include <iostream>
#include <stdio.h>
using namespace std;

int main(){

	int a;
	long long int prod=1;
	cout<<"Enter a number: "<<endl;
	cin>>a;
	
	if(a<0){
		cout<<"Error";
	
	}
	 else if (a==0 || a==1){
		cout<<"The factorial of "<<a<<" is 1";
	}
	 else{
		for( int i=1; i<=a;i++){
			prod = prod * i;	
		}
	cout<<	"The factorial of "<<a<<" is "<<prod;
		}
	
	
	return 0;
}
